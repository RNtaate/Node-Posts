<main class="d-flex flex-column align-items-center">
  <%- include("./partials/navbar.js") %>
  <form action="/posts" method="POST" class="w-50 mb-5">
  <textarea name="postbody" id="" cols="30" rows="1" placeholder="What is on your mind?" class="mb-2 w-100 border-bottom pb-2"></textarea>
  <button type="submit" class="btn btn-primary w-100">Post</button>
  </form>
  <% posts.forEach( post => { %>
  <div class="card mb-3 w-50 border-light">
    <div class="card-body text-secondary">
      <p class="card-text"><%= post.postbody %></p>
    </div>
    <div class="bg-transparent d-flex justify-content-end pe-4 pb-3">
      <a href="/editPost/<%= post._id %>" ><i class="fa-solid fa-pen"></i></a>
      <form action="/posts/<%= post._id %>?_method=DELETE" method="POST" style="display: inline" class="mx-3">
        <button type="submit"><i class="fa-solid fa-trash"></i></button>
      </form>
      <a href="/posts/<%=post._id%>"><i class="fa-solid fa-comment"></i></a>
    </div>
  </div>
  <% }) %>
</main>