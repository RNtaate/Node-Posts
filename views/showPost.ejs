<main class="d-flex flex-column align-items-center">
  <%- include("./partials/navbar.js") %>
  <p class="w-50"><%= post.postbody %></p>
    <form action="/comments" method="POST" class="w-50 mb-5">
      <input type="text" value="<%= post._id%>" name="post_foreign_id" style="display: none"/>
      <textarea name="commentbody" id="" cols="30" rows="4" placeholder="Leave a comment" class="form-control w-100 mb-3"></textarea>
      <button type="submit" class="btn btn-primary w-100">Comment</button>
    </form>
  <% comments.forEach( comment => { %>
    <p><%= comment.commentbody %></p>
  <% }) %>
</main>