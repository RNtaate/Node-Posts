<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- bootstrap cdn link -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

  <!-- stylesheet file -->
  <link rel="stylesheet" href="/stylesheets/styles.css" />

  <title>Norp Posts</title>
</head>
<body>
  <%- body %>

  <!-- font awesome script file -->
  <script src="https://kit.fontawesome.com/c56f08e6fc.js" crossorigin="anonymous"></script>

  <!-- bootstrap script file -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
  <script src="/javascript/navbarNavigation.js"></script>
  <script>
    let myAlert = document.querySelector('#toast-div');
    const displayAlert = () => {
      let options = {
        animation: true,
        delay: 4000
      }
      let bsAlert = new bootstrap.Toast(myAlert, options);
      bsAlert.show();
    }

    if(myAlert) {
      displayAlert();
    }
  </script>
</body>
</html>